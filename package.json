{
	"name": "playground",
	"version": "1.0.0",
	"license": "BSD-3-Clause",
	"scripts": {
		"build": "rm -rf ./bin && yarn build:client && yarn build:server",
		"build:client": "webpack --config webpack.client.js",
		"build:server": "webpack --config webpack.server.js",
		"commit": "yarn lint && git-cz",
		"lint": "prettier --write src/**/*.ts && eslint --fix src/**/*.ts",
		"start": "webpack --config webpack.dev.js --watch --info-verbosity none",
		"watch:client": "webpack --config webpack.client.js --watch",
		"watch:server": "webpack --config webpack.server.js --watch"
	},
	"config": {
		"commitizen": {
			"path": "cz-gitmoji"
		}
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxBracketSameLine": false,
		"jsxSingleQuote": true,
		"printWidth": 140,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true,
		"vueIndentScriptAndStyle": false
	},
	"dependencies": {
		"@geckos.io/client": "^1.6.0",
		"@geckos.io/server": "^1.6.0",
		"@geckos.io/snapshot-interpolation": "^0.0.5",
		"@msgpack/msgpack": "^1.12.0",
		"ammojs-typed": "^1.0.6",
		"cannon-es": "^0.15.1",
		"clipboard-polyfill": "^3.0.0",
		"dat.gui": "^0.7.7",
		"dog-names": "^2.0.0",
		"git-revision-webpack-plugin": "^3.0.6",
		"glslify-loader": "^2.0.0",
		"hammerjs": "^2.0.8",
		"howler": "^2.1.3",
		"isosurface": "^1.0.0",
		"json-diff": "^0.5.4",
		"jsonwebtoken": "^8.5.1",
		"jsxstyle": "^2.3.1",
		"load-bmfont": "^1.4.1",
		"matter-js": "^0.14.2",
		"node-emoji": "^1.10.0",
		"open-simplex-noise": "^2.3.1",
		"pixi-particles": "^4.2.0",
		"pixi-spine": "^2.1.8",
		"pixi.js": "^5.2.1",
		"poisson-disk-sampling": "^2.2.0",
		"poly-decomp": "^0.3.0",
		"preact": "^10.4.4",
		"query-string": "^6.13.1",
		"raw-loader": "^4.0.1",
		"sat": "^0.8.0",
		"seedrandom": "^3.0.5",
		"shortid": "^2.2.15",
		"three": "^0.115.0",
		"three-bmfont-text": "^3.0.1",
		"tweakpane": "^1.5.3",
		"typed-signals": "^1.0.5",
		"uuidv4": "^6.1.1",
		"webfontloader": "^1.6.28",
		"yargs": "^15.3.1"
	},
	"devDependencies": {
		"@babel/plugin-transform-modules-commonjs": "^7.9.6",
		"@types/dat.gui": "^0.7.5",
		"@types/hammerjs": "^2.0.36",
		"@types/howler": "^2.1.2",
		"@types/jest": "^25.2.1",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/matter-js": "^0.14.2",
		"@types/sat": "^0.0.30",
		"@types/seedrandom": "^2.4.28",
		"@types/shortid": "^0.0.29",
		"@types/webfontloader": "^1.6.31",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"babel-loader": "^8.1.0",
		"chalk": "^4.0.0",
		"commitizen": "^4.0.3",
		"copy-webpack-plugin": "^5.1.1",
		"cz-gitmoji": "^0.0.7",
		"eslint": "^6.8.0",
		"html-webpack-plugin": "^4.0.4",
		"jest": "^25.3.0",
		"nodemon-webpack-plugin": "^4.3.1",
		"prettier": "^2.0.2",
		"ts-jest": "^25.4.0",
		"ts-loader": "^6.2.2",
		"typescript": "^3.7.5",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3",
		"webpack-merge": "^4.2.2",
		"webpack-node-externals": "^1.7.2",
		"webpack-plugin-serve": "^0.12.1",
		"webpackbar": "^4.0.0"
	}
}
