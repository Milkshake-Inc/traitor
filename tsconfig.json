{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"baseUrl": ".",
		"paths": {
			"@ecs/*": ["./ecs/src/engine/*"]
		},
		"lib": ["es2015", "ES2019", "DOM", "ES7"],
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"jsx": "react",
		"jsxFactory": "h",
		"allowSyntheticDefaultImports": true
	},
	"include": ["./game/"],
	"exclude": ["node_modules", "test"]

}
